@{
    ViewBag.Title = "Prototipo APTM";
    ViewBag.Css = new string[] {
        "https://openlayers.org/en/v5.3.0/css/ol.css",
        "/App_Css/Home.css",

    };
    ViewBag.Js = new dynamic[] {
        new {src = "https://cdn.polyfill.io/v2/polyfill.min.js?,features=fetch,requestAnimationFrame,Element.prototype.classList,URL" },
        new {src = "https://openlayers.org/en/v5.3.0/build/ol.js" },
        new {src = "https://cdnjs.cloudflare.com/ajax/libs/proj4js/2.4.4/proj4.js" },
        new {src = "/App_JS/Home.js",mode = "Index" }
    };
}

<div id="map" class="map"><div id="popup"></div></div>
<div id="msg">Click para agregar un punto.</div>
<div id="menu_aptm">
    <div class="accordion" id="accordionAPTM">
        @Html.DropDownList("cboMReparto", ViewBag.lstRepartos as SelectList, "Seleccione un registro de despacho", new { @class = "form-control", @index = "demo" })
        <div class="card">
            <div class="card-header" id="headingOne">
                <a class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false">Despacho</a>
            </div>
            <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionAPTM" style="">
                <div class="card-body">

                    <div class="input-group input-group-sm">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-sm">Placa</span>
                        </div>
                        <input type="text" id="txtPlaca" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm" readonly>
                    </div>

                    <div class="input-group input-group-sm">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-sm">Conductor</span>
                        </div>
                        <input type="text" id="txtConductor" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm" readonly>
                    </div>

                    <div class="input-group input-group-sm">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-sm">Horario</span>
                        </div>
                        <input type="text" id="txtHorario" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm" readonly>
                    </div>


                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header" id="headingTwo">
                <a class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false">Detalles de despacho</a>
            </div>
            <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionAPTM" style="">

                <div class="card">
                    <div class="card-body">
                        <div class="card" id="txtDetalleReparto">
                        </div>
                    </div>
                </div>

            </div>
        </div>
